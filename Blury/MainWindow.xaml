<Window x:Class="Blury.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        xmlns:local="clr-namespace:Blury"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid Name="bck" Margin="0">
            <Image Source="kiss.jpg" Stretch="Fill" />
            <ScrollViewer Width="200" Margin="30">
                <ScrollViewer.Resources>
                    <Style TargetType="Button">
                        <Setter Property="Padding" Value="18,5" />
                        <Setter Property="Margin" Value="5" />
                    </Style>
                </ScrollViewer.Resources>
                <StackPanel>
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                    <Button Content="aklsjdkl" />
                </StackPanel>
            </ScrollViewer>
        </Grid>

        <ScrollViewer Margin="0, 20" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Rectangle ClipToBounds="True">
                    <i:Interaction.Behaviors>
                        <local:BlurBackgroundBehavior BackgroundContent="{Binding ElementName=bck}" />
                    </i:Interaction.Behaviors>
                </Rectangle>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="Проверка" TextAlignment="Center" />
                    <Button Content="Press me" Padding="15,3" />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>